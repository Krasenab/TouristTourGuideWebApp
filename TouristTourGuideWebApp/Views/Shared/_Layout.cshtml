﻿@using Microsoft.AspNetCore.Identity
@using TouristTourGuide.Data.Models.Sql.Models
@inject TouristTourGuide.Services.Interfaces.IGuideUserService guideService;
@inject TouristTourGuide.Services.Interfaces.IImageService imageService;
@inject UserManager<ApplicationUser> userManager;

<!DOCTYPE html>
<html lang="en">
@{
    string currentUserId = userManager.GetUserId(this.User);
    bool isGuide = guideService.isUserGuide(currentUserId);
    byte[] logoData = imageService.GetImageBytesMongoDb("Logo");
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TouristTourGuideWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/TouristTourGuideWebApp.styles.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap&subset=cyrillic" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        .navbar {
            height: 70px;
             display: flex; 
           /*  align-items: center; */
        }


        .navbar-brand img {
            max-height: 15%;
            max-width: 15%;
            height: auto;
            width: auto;
        }

        @@media (max-width: 768px) {
            .navbar-brand img {
                display: none;
                max-height: 40px;
                max-width: 40px;
            }

            bd-placeholder-img-lg {
                font-size: 3.5rem;
            }


            .carousel-container {
                padding-top: 70px;
            }

            .carousel-control-prev, .carousel-control-next {
                top: 50%;
                transform: translateY(-50%);
            }
        }

    </style>
</head>
<body>
    <partial name="_NotificationPartial" />
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow" style="background:linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    @*Лого снимката на нав бара.(трябва да го сменя логото)*@
                  @*   <img src="@("data:image/jpeg;base64," + Convert.ToBase64String(logoData))" alt=""> *@
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarSupportedContent" style="justify-content:center; border:2px solid pink; background:linear-gradient(to right bottom, rgba(246, 211, 101, 1))">
                    <ul class="navbar-nav flex-grow-1" style="border:2px solid yellow;justify-content:center">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="TouristTour" asp-action="All">Explore</a>
                        </li>
                        @if (!isGuide)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white text-nowrap" asp-area="" asp-controller="GuideUser" asp-action="BecomeGuide">Become a supplier</a>
                            </li>
                        }
                        @if (isGuide)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white text-nowrap" asp-area="" asp-controller="TouristTour" asp-action="Create">Add tours</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white text-nowrap" asp-area="" asp-controller="Booking" asp-action="AllBookings">Tours with booking</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="containers">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background:linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))">
        <div class="container">
            &copy; 2024 - TouristTourGuideWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
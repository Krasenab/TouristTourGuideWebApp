@using Microsoft.AspNetCore.Identity
@using TouristTourGuide.Data.Models.Sql.Models
@using TouristTourGuide.Services.Interfaces
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IGuideUserService guideService
@{
    bool isGuide = guideService.isUserGuide(UserManager.GetUserId(this.User));

}
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (isGuide)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-action="Profile" asp-controller="GuideUser" title="Manage">My Profile</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" title="Manage">Hello @User.Identity?.Name!</a>
            </li>
        }


        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

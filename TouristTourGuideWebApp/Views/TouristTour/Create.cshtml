@model TouristTourCreateViewModel

<head>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        #regForm {
            background-color: #ffffff;
            margin: 1em auto;
            padding: 1em;
            width: 70%;
            min-width: 300px;
            border-radius: 8px;
            /*  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1); */
        }

        .form-group {
            margin-bottom: 1.5em;
        }

        label {
            display: block;
            margin-bottom: 0.5em;
            font-weight: 600;
        }

        input,
        textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
        }

            input:focus,
            textarea:focus {
                outline: none;
                border-color: #007BFF;
            }

            input.invalid {
                border-color: #ff7373;
            }

        .tab {
            display: none;
        }

        #prevBtn, #nextBtn {
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 12px;
            background: linear-gradient(90deg, #007BFF, #0056b3);
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.2s ease;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

            #prevBtn:hover, #nextBtn:hover {
                background: linear-gradient(90deg, #0056b3, #007BFF);
            }


        .step {
            height: 30px;
            width: 30px;
            margin: 0 10px;
            background-color: #ccc;
            border: none;
            border-radius: 50%;
            display: inline-block;
            opacity: 0.5;
            line-height: 30px;
            text-align: center;
            font-size: 16px;
            color: #fff;
        }

            .step.active {
                opacity: 1;
                background-color: #007BFF;
            }

            .step.finish {
                background-color: #28a745;
            }

    </style>

</head>

<div class="text-center mb-5">
    <h1>Create tour</h1>
</div>

<form id="regForm" asp-controller="TouristTour" asp-action="Create" method="post">


    <div class="tab">
        
         <h7>Required tour information</h7>
        
         <div class="form-group mb-3">
            <label asp-for="TourName">Tour Name</label>
            <input asp-for="TourName" class="form-control" placeholder="John Doe guide" data-required="true">
          
        </div>

        <div class="form-group mb-3">
            <label asp-for="Duaration">Duaration of trip</label>
            <input asp-for="Duaration" class="form-control" placeholder="Best Tour Trip Eood" data-required="true">
            <span class="step"><i class="fas fa-time"></i></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PricePerPerson">Price per person</label>
            <input asp-for="PricePerPerson" class="form-control" placeholder="" type="number" data-required="true">
            <span class="step"><i class="fas fa-money"></i></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="StartEndHouers">Start or/and End houers of tour.</label>
            <input asp-for="StartEndHouers" class="form-control" placeholder="start: 4:35AM or 16:20PM end: 13:30PM etc" data-required="true">
            <span class="step"><i class="fas fa-houers"></i></span>
        </div>

        <div class="form-group">
            <label asp-for="LocationId" placeholder="Location Country Name"></label>
            <select asp-for="LocationId" class="form-control">
                @foreach (var location in Model.Locations)
                {
                    <option value="@location.Id">@location.Country</option>
                }
            </select>
            <span asp-validation-for="LocationId" class="small text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="LocationCity">City</label>
            <input asp-for="LocationCity" class="form-control" placeholder="" data-required="true">
          
        </div>
        <div class="form-group mb-3">
            <label asp-for="LocationState">If the tour is in USA u can add State</label>
            <input asp-for="LocationState" class="form-control" placeholder="" data-required="false">

        </div>
       
    </div>

    <div class="tab">
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control">
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="small text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="MeetingPoint">Meeting Point of your tour</label>
            <input asp-for="MeetingPoint" class="form-control" placeholder="" id="vatNumber">
           
        </div>
        <div class="form-group mb-3">
            <label asp-for="MeetingPointMapUrl">Add google map url</label>
            <input asp-for="MeetingPointMapUrl" class="form-control" placeholder="">
         
        </div>
    </div>

    <div class="tab">
        <div class="form-group mb-3">
            <label asp-for="Includes">Includes</label>
            <input asp-for="Includes" class="form-control" placeholder="" type="text" >
           
        </div>
        <div class="form-group mb-3">
            <label asp-for="NotSuitableFor">This tour is not suitbal for....</label>
            <input asp-for="NotSuitableFor" class="form-control" placeholder="Registration address">
         
        </div>
        <div class="form-group mb-4">
            <label asp-for="KnowBeforeYouGo">What need to know your clients befor go</label>
            <input asp-for="KnowBeforeYouGo" class="form-control" row="3" placeholder="" type="text">

        </div>
        <div class="form-group mb-4">
            <label asp-for="WhatToBring">What to bring your clients</label>
            <input asp-for="WhatToBring" class="form-control" rows="3" placeholder="" type="text">

        </div>
       
    </div>
    <div class="tab">

        <div class="form-group mb-4">
            <label asp-for="FullDescription">Full descritprtion for your tour</label>
            <textarea asp-for="FullDescription" class="form-control" rows="5" placeholder="About The Activity Provider" data-required="true"></textarea>
          
        </div>
    </div>



    <div style="overflow:auto;">
        <div style="float:right;">
            <button type="button" id="prevBtn" onclick="nextPrev(-1)">Previous</button>
            <button type="button" id="nextBtn" onclick="nextPrev(1)">Next</button>
        </div>
    </div>

    <div style="text-align:center;margin-top:2em;">
        <span class="step"><i class="fas fa-user"></i></span>
        <span class="step"><i class="fas fa-briefcase"></i></span>
        <span class="step"><i class="fas fa-envelope"></i></span>
        <span class="step"><i class="fas fa-briefcase"></i></span>
    </div>

</form>


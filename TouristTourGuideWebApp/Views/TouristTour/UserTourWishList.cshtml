@model List<UserTourWishLIstViewModel>;



<div class="row mb-5 text-center pt-3">
    <h1>Your wish list</h1>
</div>

@if (Model.Count != 0)
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="col-md-3 flex-column">
            <div class="card mb-3">
                <div class="card-body text-center">
                    <h4>@Model[i].TourName</h4>
                    <h5>@Model[i].Location</h5>
                    <p>@Model[i].Description</p>
                </div>
                <a asp-action="RemoveFromWishList" asp-controller="TouristTour" asp-route-Id="@Model[i].TourId">Remove</a>
            </div>
        </div>
    }
}
else
{
    <div class="cont">

        <h5 class="text-center">Wish list is empty</h5>

    </div>

}

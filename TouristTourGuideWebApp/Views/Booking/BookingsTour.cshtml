@model List<BookingDetailsViewModel>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1 class="display-4 text-center">Tour Bookings</h1>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Client Name</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Email</th>
                            <th scope="col">Count of People</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">There are no bookings for this tour.</td>
                            </tr>
                        }

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AppUserId</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>@item.CountOfPeople</td>

                                <td>
                                    <form asp-action="ToggleAcceptStatus" asp-controller="TourBooking" asp-route-id="@item.Id" method="post">
                                        <button type="submit" class="btn btn-sm @(item.isAccepted ? "btn-success" : "btn-warning")">
                                            @(item.isAccepted ? "Accepted" : "Not Accepted")
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
